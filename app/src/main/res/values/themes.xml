<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SundayMobilityAssignment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/sun</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/actionbarStyle</item>
    </style>

    <style name="actionbarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="themeSwitcher">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:tint">?attr/colorAccent</item>
        <item name="layout_constraintHorizontal_bias">0.75</item>
        <item name="android:src">@drawable/ic_outline_light_mode_24</item>
    </style>
</resources>